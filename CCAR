#include <iostream>
#include <string>
using namespace std;
設定class CCAR class CCAR { 
/**
 *設立nickname為private*/
private:
string nickname;
/**
 *設立light,wheel 為protected*/
protected:
int light;
int wheel;
/**
 *設立CCAR():light(2)建構子以下為public*/
public:
CCAR() :light(2)
{
wheel = 5;
cout << "car's constructor(wheel=" << wheel << ")" << endl;
}
CCAR(string nickname) :light(2)
{
wheel = 5;
/**
 *指標把nickname指向nickname*/
this->nickname = nickname;
cout << "car's constructor(nickname=" << nickname << ")" << endl;
}
/**
 *CCAR解構子*/
~CCAR()
{
cout << "car's destructor" << "(" << nickname << ")" << endl;
}
void start()
{
cout << "car's start" << endl;
}
void stop()
{
cout << "car's stop" << endl;
}
void turn()
{
cout << "car's turn" << endl;
}
};
/**
 *class CBNW 繼承 class CCAR 之屬性*/--------------------------
class CBMW : public CCAR {
public:
/**
 *CBNW 建構子*/
CBMW() { light = 4; wheel = 4; cout << "bmw's constructor" << endl; }
/**
 *CBNW 解構子*/
~CBMW() { cout << "bmw's destructor" << endl; }
void Abs()
{
cout << "bmw's abs" << endl;
}
void start()
{
cout << "bmw's start" << endl;
CCAR::start();//scope operator

}
};
--------------------------
int main(int argc, const char * argv[]) {
CBMW bmw;
bmw.light=3;
/**
 *依序執行CBNW的start,Abs,stop指令*/
bmw.start();
bmw.Abs();
bmw.stop();
/**
 *回傳值0*
return 0;
}
